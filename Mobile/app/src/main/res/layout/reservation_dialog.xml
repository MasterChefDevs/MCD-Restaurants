<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/reservation_dialog"
    tools:context=".data.reservations.ReserveDialog"
    >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:backgroundTint="@color/cardBackground"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="Your Reservation: "
                android:textSize="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/mainGreen"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/reservation_date"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@color/green_faded"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/mainGreen"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                />
                <TextView
                    android:id="@+id/reservation_time"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:textSize="20dp"
                    android:background="@color/green_faded"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/mainGreen"
                    android:gravity="center_horizontal"
                    android:paddingTop="5dp"
                    />
                <TextView
                    android:id="@+id/reservation_duration"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:textSize="20dp"
                    android:background="@color/green_faded"
                    android:textColor="@color/mainGreen"
                    android:gravity="center_horizontal"
                    android:paddingTop="5dp"
                    />
            </LinearLayout>

            <EditText
            android:id="@+id/pers_name_text"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
                android:layout_marginTop="20dp"
            />
        <EditText
            android:id="@+id/telefon_text"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            />

            <EditText
                android:id="@+id/email_text"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                >
        <Button
            android:id="@+id/cancel_reservation_button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/mainGreen"
            android:text="Cancel"
            android:layout_marginRight="70dp"
            />

        <Button
            android:id="@+id/save_reservation_button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/mainGreen"
            android:text="Reserve"
            android:layout_gravity="center"
            />

            </LinearLayout>

            <TextView
                android:id="@+id/reservation_error"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/error_red"
                android:gravity="center"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>