<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".data.reservations.MainReservationFragment">

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="34dp"
                android:gravity="center"
                >

                <Button
                    android:id="@+id/back_to_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:layout_marginRight="-45dp"
                    android:layout_gravity="right"
                    app:backgroundTint="#009688"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
               >

                <TextView
                    android:id="@+id/restaurant_name"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:textColor="@color/mainGreen"
                    android:textSize="@dimen/title_size" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/restaurant_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxWidth="400dp"
                    android:gravity="center"
                    android:textColor="@color/green_faded"
                    android:textSize="@dimen/addres_size" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <LinearLayout
                    android:layout_height="40dp"
                    android:gravity="center">

                    <RatingBar
                        android:id="@+id/rating_stars"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:isIndicator="true"
                        android:numStars="5" />

                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:weightSum="13"
                >

                <Button
                    android:id="@+id/flor_button"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="4"
                    android:backgroundTint="@color/mainGreen"
                    android:text="Floor" />

                <Spinner
                    android:id="@+id/floors_spinner"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:background="@color/cardBackground"
                    android:layout_weight="4"

                    />

                <Button
                    android:id="@+id/duration_button"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/mainGreen"
                    android:text="Hours"
                    android:layout_weight="4"
                    />

                <NumberPicker
                    android:id="@+id/duration_numer_picker"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_height="40dp"
                >
                <Button
                    android:id="@+id/date_button"
                    android:layout_width="0dip"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/mainGreen"
                    android:text="Date"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/date_view"
                    android:background="@color/cardBackground"
                    android:layout_height="30dp"
                    android:layout_width="0dip"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:paddingTop="5dp"
                    />
                <Button
                    android:id="@+id/time_button"
                    android:layout_width="0dip"
                    android:layout_marginTop="5dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/mainGreen"
                    android:text="Time" />
                <TextView
                    android:background="@color/cardBackground"
                    android:id="@+id/time_view"
                    android:layout_width="0dip"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_horizontal"
                    android:paddingTop="5dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="370dp"
                    android:layout_height="370dp"
                    android:fillViewport="true">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/cardBackground" />
                </androidx.core.widget.NestedScrollView>

            </TableRow>
        </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>