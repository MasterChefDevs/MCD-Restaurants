<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantStatisticsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="34dp" />

    <Button
        android:id="@+id/back2map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Back"
        app:backgroundTint="#009688" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/restaurant_name_stat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Restaurant Name"
                android:textColor="#009688"
                android:textSize="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/restaurant_address_stat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxWidth="400dp"
                android:text="Restaurant Adress"
                android:textColor="#009688"
                android:textSize="20dp" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <RatingBar
                    android:id="@+id/rating_stars_stat"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:isIndicator="true"
                    android:numStars="5" />

                </LinearLayout>
            </TableRow>
        </TableLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center">
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart_by_day"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">
        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="Day"
            android:backgroundTint="@color/mainGreen"
            />
        <Spinner
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/daySpinner"
            android:layout_marginLeft="20dp"
            android:background="@color/cardBackground"
            >
        </Spinner>

        </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="550dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center">
                <com.github.mikephil.charting.charts.HorizontalBarChart
                    android:id="@+id/chart_by_hour"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>