<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".other.FirstFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-38dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="92dp" />
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/up_background"
                android:theme="@style/Theme.MobileChefs.AppBarOverlay">
            </com.google.android.material.appbar.AppBarLayout>

            <TextView
                android:layout_margin="0dp"
                android:id="@+id/toolbar_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:textColor="@color/mainGreen"
                android:layout_marginTop="140dp"
                />

            <SearchView
                android:id="@+id/search_view_first"
                android:layout_width="295dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:background="#F1EAEA">

            </SearchView>

            <Button
                android:id="@+id/button_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/login"
                app:backgroundTint="#009688"

                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="@id/textView3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:rippleColor="#FAF7F7" />

            <TableRow

                android:layout_width="600px"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/white"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:gravity="center"
                android:text="First restaurant"
                android:textColor="#FFFFFF" />


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                app:srcCompat="@drawable/restaurant"
                tools:src="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Details About restaurant"
                android:textColor="@color/white" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp" />
            <TableRow
                android:layout_width="600px"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Second Restaurant"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="141dp"
                android:src="@drawable/restaurant" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Details about second restaurant"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="logout"
        android:background="@color/mainGreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="#009688"/>

</androidx.constraintlayout.widget.ConstraintLayout>